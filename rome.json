{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true,
        "useKeyWithClickEvents": "warn"
      },
      "security": {
        "recommended": true
      },
      "correctness": {
        "recommended": true,
        "noUnusedVariables": "error"
      },
      "style": {
        "recommended": true
      },
      "complexity": {
        "recommended": true
      },
      "performance": {
        "recommended": true
      },
      "suspicious": {
        "recommended": true
      },
      "nursery": {
        "recommended": true,
        "noVar": "error",
        "useCamelCase": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentSize": 2,
    "lineWidth": 120,
    "indentStyle": "tab"
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteProperties": "asNeeded",
      "trailingComma": "all",
      "quoteStyle": "single"
    }
  },
  "files": {
    "ignore": ["node_modules", "out", ".next", "dist"]
  }
}
